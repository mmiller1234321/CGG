<section class="container">
  <h3 class="gallery-name">Tutor Details</h3>
  <section class="flex-row justify-center">
    <section class="card">
      <a href="/tutor/{{tutor.id}}">
        <!-- Load the image dynamically -->
       
        <header>{{this.name}}</header>
        <div class="card-body">
          <img src="/images/{{this.imageLink}}" alt="{{this.name}}">
          <p>Email: {{this.email}}</p>
        </div>
      </a>
    </section>
  </section>
</section>
