<!-- Include Bootstrap's CSS via CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
  /* Custom CSS for setting image dimensions */
  .card-img {
    width: 100%;
    height: 200px; /* Adjust the height as per your requirement */
    object-fit: cover; /* Ensure the image covers the entire space */
  }
</style>

<h1>{{skill.name}}</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">
  {{#each skill.tutors}}
  <div class="col">
    <div class="card h-100">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title">Tutor: {{this.name}}</h5>
        <p class="card-text">Email: {{this.email}}</p>
        <img src="/images/{{this.imageLink}}" alt="{{this.name}}" class="card-img"> <!-- Added card-img class -->
        <p class="card-text">Job Title: {{this.jobTitle}}</p>
        <p class="card-text">Skills:
          <ul>
            {{#each this.Skills}}
            <li>{{this.name}}</li>
            {{/each}}
          </ul>
        </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
